@import url(http://fonts.googleapis.com/css?family=Montserrat:400,700);
@import url(http://fonts.googleapis.com/css?family=Arimo:400,700);
dt = 0.75s
body
  margin 0
  padding 0
  background: #283872;
  transition: background dt linear;
  -webkit-transition: background dt linear;
  -moz-transition: background dt linear;
  font-family: 'Montserrat', sans-serif;

#dotSection
  position relative
  display flex
  flex-direction row
  justify-content space-around
  align-items center
  margin 0 auto
  width 50%
  top 30px
  img
    width 100%
    position absolute
    top 9px
    left 0
    z-index -1
  .selected
    height: 30px !important
    width: 30px !important
  .dots
    background-color yellow
    border-radius 200px
    height 10px
    width 10px
    display inline-block
    margin 0
    cursor pointer

#menuBtn
  font-size 20px
  color #FFF
  cursor pointer
  text-align center
  margin-top: 30px;
  #burger
    color #FFF000
    display inline-block
#menu
  display inline-block
  position absolute
  height 100%
  width 200px
  right 0
  top: 0;
  z-index: 1;
  nav
    width 100%
    height 100%
    display none
    background-color #202266
    ul
      margin 0
      padding 0
      height 100%
      list-style none
      display flex
      flex-direction column
      justify-content: space-around
      align-items center
      li
        a
          color #ffffff
          text-decoration none
          font-size 1.5em
        a:hover
          border-bottom solid

#canvas
  svg
    position fixed
    top 0
    left 0
    height 100%
    width 100%
    z-index -10

#slides
  overflow: hidden;
  width: 100%;
  height: 100%;
  position absolute
  z-index -10

.slideElem
  width: 100%
  height: 100%
  display: flex
  position relative

#tituloHG
  margin auto
  border-radius .5em
  background-color #F10000
  z-index 1

  h1
    margin .125em .4em
    font-size 4.5em
    color #ffffff
    z-index 4

    span
      font-size .4em

aside[id="slides-control"] .slidr-control.right
  width: 50px !important;
  height: 50px !important;
  top: 50% !important;
  margin-top: -25px !important;
  right: -25px !important;
  border-radius: 25px;
  background-color #000000
  opacity: 0.6;

aside[id="slides-control"] .slidr-control.left
  width: 50px !important;
  height: 50px !important;
  top: 50% !important;
  margin-top: -25px !important;
  left: -25px !important;
  border-radius: 25px;
  background-color #000000
  opacity: 0.6;

.slidr-control.up
  display: none !important

.slidr-control.down
  display: none !important

#arista
  height 100%
  width 100%
  display flex
  flex-direction row
  justify-content center
  align-items center
#registro
  display flex !important
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  .titleRegister
    display inline-block
    background-color #d3d2d1
    border-bottom solid #5AB3D2
    padding 5px 40px
    font-family: 'Open Sans Condensed', sans-serif;
    figcaption
      font-size 17pt
  .benefits
    width 350px
    color #FFF
    list-style-image: url('images/dots.png');
    font-family: 'Arimo', sans-serif;
    font-size 10pt
    .singleBenefit
      margin 8px 0
  #sendMessage
    display: flex;
    flex-direction: column;
    .campo
      font-family: 'Arimo', sans-serif;
      font-size 11pt
      width 350px
      display block
      padding 5px
      margin 5px 0
      border none
      border-top solid #5AB3D2
      border-left solid #5AB3D2
    .campo::-webkit-input-placeholder
      color #000
    #registrar
      font-family: 'Arimo', sans-serif;
      font-size 17pt
      text-align center
      color #E3E559
      font-weight bold
      border solid #E3E559
      border-radius 15px
      margin: 10px auto;
      padding 5px
      cursor pointer
    #registrar:hover
      background-color #E3E559
      color #FFF
  #aristaBottom
    display: flex;
    background-color: #221942;
    width: inherit;
    height: 20%;
    flex-direction: row;
    justify-content: center;
    align-items: center;
