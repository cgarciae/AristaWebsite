dt = 0.75s
body
  margin 0
  padding 0
  background: #EEEEEE;
  transition: background dt linear;
  -webkit-transition: background dt linear;
  -moz-transition: background dt linear;
nav
  position fixed
  width 100%
  display flex
  justify-content center
  z-index 20
  ul
    margin 0
    padding 0
    width 70%
    list-style none
    display flex
    flex-direction row
    justify-content: space-around
    border-radius .5em
    background-color darkslategray

    li
      a
        color #ffffff
        text-decoration none
        font-size 1.5em



#canvas
  svg
    position fixed
    top 0
    left 0
    height 100%
    width 100%
    z-index 0


#slides
  overflow: hidden;
  width: 100%;
  height: 100%;
  position absolute

.slideElem
  width: 100%
  height: 100%
  display: flex
  position relative

#formulario
  margin auto

#tituloHG
  margin auto
  border-radius .5em
  background-color #F10000
  z-index 1

  h1
    margin .125em .4em
    font-size 4.5em
    color #ffffff
    z-index 4

    span
      font-size .4em


aside[id="slides-control"] .slidr-control.right
  width: 50px !important;
  height: 50px !important;
  top: 50% !important;
  margin-top: -25px !important;
  right: -25px !important;
  border-radius: 25px;
  background-color #000000
  opacity: 0.6;

aside[id="slides-control"] .slidr-control.left
  width: 50px !important;
  height: 50px !important;
  top: 50% !important;
  margin-top: -25px !important;
  left: -25px !important;
  border-radius: 25px;
  background-color #000000
  opacity: 0.6;

.slidr-control.up
  display: none !important
